{% extends 'base.html.twig' %}

{% block title %}Weather in {{ location.city }}, {{ location.country }}{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Weather in {{ location.city }}, {{ location.country }}</h1>

        <ul>
            {% for weather in weatherHistory %}
                <li>
                    {{ weather.createdAt|date('d.m.Y') }}: {{ weather.temperature }}
                    {% if weather.unit == 'celsius' %}
                        &deg;C
                    {% else %}
                        &deg;F
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
